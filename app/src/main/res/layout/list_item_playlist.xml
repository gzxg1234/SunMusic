<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:padding="8dp"
    android:background="?android:attr/selectableItemBackground"
    android:clipToPadding="false"
    xmlns:tool="http://schemas.android.com/tools">


    <ImageButton
        android:id="@+id/btn_list_action"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@android:color/transparent"
        android:src="@mipmap/ic_more_vert_black_24dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true" />

    <TextView
        android:id="@+id/tv_playlist_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/btn_list_action"
        android:textSize="16sp"
        android:textColor="@color/textColorPrimaryInverse"
        tool:text="Default List"/>

    <TextView
        android:id="@+id/tv_songnum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/btn_list_action"
        android:layout_alignParentBottom="true"
        android:textSize="14sp"
        android:textColor="@color/textColorSecondaryInverse"
        tool:text="15首歌曲"/>
    <ImageView
        android:src="@color/colorListDivider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="-8dp"
        />
</RelativeLayout>