<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:padding="8dp"
    android:clipToPadding="false"
    android:background="?android:attr/selectableItemBackground"
    android:gravity="center_vertical"
    xmlns:tool="http://schemas.android.com/tools">


    <ImageView
        android:id="@+id/song_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="8dp"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_music_head_48dp"/>

    <ImageButton
        android:id="@+id/btn_song_action"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@android:color/transparent"
        android:src="@mipmap/ic_more_vert_black_24dp"
        android:layout_alignParentRight="true" />

    <TextView
        android:id="@+id/tv_song_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/btn_song_action"
        android:layout_toRightOf="@+id/song_icon"
        android:singleLine="true"
        android:ellipsize="end"
        android:textSize="16sp"
        android:textColor="@color/textColorPrimaryInverse"
        tool:text="Suger"/>

    <TextView
        android:id="@+id/tv_song_artist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/btn_song_action"
        android:layout_toRightOf="@+id/song_icon"
        android:layout_alignParentBottom="true"
        android:singleLine="true"
        android:ellipsize="end"
        android:textSize="14sp"
        android:textColor="@color/textColorSecondaryInverse"
        tool:text="Maroon5"
        />

    <ImageView
        android:src="@color/colorListDivider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_toRightOf="@+id/song_icon"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="-8dp"
        />
</RelativeLayout>