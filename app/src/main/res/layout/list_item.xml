<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    android:id="@+id/item_view"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:layout_marginBottom="1dp"
    android:clipToPadding="false"
    android:gravity="center_vertical"
    android:padding="8dp">

    <ImageView
        android:id="@+id/iv_picture"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="8dp"
        android:scaleType="fitXY"
        android:src="@mipmap/default_song_pic" />

    <ImageButton
        android:id="@+id/btn_item_action"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentRight="true"
        android:background="@android:color/transparent"
        android:src="@mipmap/ic_more_vert_black_24dp" />

    <TextView
        android:id="@+id/tv_text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/btn_item_action"
        android:layout_toRightOf="@+id/iv_picture"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/textColorPrimaryInverse"
        android:textSize="16sp"
        tool:text="Suger" />

    <TextView
        android:id="@+id/tv_text2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/btn_item_action"
        android:layout_toRightOf="@+id/iv_picture"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/textColorSecondaryInverse"
        android:textSize="14sp"
        tool:text="Maroon5" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="-8dp"
        android:layout_toRightOf="@+id/iv_picture"
        android:src="@color/colorListDivider" />
</RelativeLayout>