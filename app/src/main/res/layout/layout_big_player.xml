<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@android:color/white">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7">
        <ImageView
            android:id="@+id/iv_song_picture"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@mipmap/default_big_song_pic"/>

        <RelativeLayout
            android:background="@drawable/topbar_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/status_height">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="?android:attr/actionBarSize">

                <ImageButton
                    android:id="@+id/ibtn_back"
                    android:layout_width="?android:attr/actionBarSize"
                    android:layout_height="?android:attr/actionBarSize"
                    android:background="?android:attr/selectableItemBackground"
                    android:src="@mipmap/ic_chevron_left_white_36dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:singleLine="true"
                    android:textSize="20dp"
                    android:textColor="@color/textColorPrimaryInverse"
                    android:layout_toRightOf="@+id/ibtn_back"
                    android:text="正在播放"/>
            </RelativeLayout>

        </RelativeLayout>
    </FrameLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:background="@android:color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:paddingLeft="16dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Love Yourself"
                android:textSize="18dp"
                android:singleLine="true"
                android:textColor="@color/textColorPrimary"
                android:layout_alignParentLeft="true" />

            <TextView
                android:id="@+id/tv_artist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Justin"
                android:textSize="15dp"
                android:singleLine="true"
                android:textColor="@color/textColorPrimary"
                android:layout_below="@+id/tv_title"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/tv_play_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_alignParentLeft="true"
                tools:text="00:24"
                android:textSize="10dp"/>

            <TextView
                android:id="@+id/tv_song_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:layout_alignParentRight="true"
                tools:text="3:28"
                android:textSize="10dp"/>

            <SeekBar
                android:id="@+id/play_progress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxHeight="4dp"
                android:minHeight="4dp"
                android:layout_below="@+id/tv_play_position"
                android:layout_marginTop="2dp"
                android:thumb="@drawable/seekbar_thumb"
                android:progressDrawable="@drawable/seekbar_play_progress"
                tools:max="100"
                tools:progress="20"
                tools:secondaryProgress="50"
                />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_alignParentBottom="true">

            <android.support.v4.widget.Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <ImageButton
                style="@style/PlayerButton"
                android:id="@+id/ibtn_play_mode"
                android:src="@mipmap/ic_repeat_black_24dp"
                android:padding="16dp"
                />
            <android.support.v4.widget.Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <ImageButton
                style="@style/PlayerButton"
                android:id="@+id/ibtn_last"
                android:padding="10dp"
                android:src="@mipmap/ic_skip_previous_black_36dp"
                />
            <android.support.v4.widget.Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <ImageButton
                style="@style/PlayerButton"
                android:id="@+id/ibtn_play_pause"
                android:padding="4dp"
                android:src="@mipmap/ic_play_arrow_black_48dp"
                />
            <android.support.v4.widget.Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <ImageButton
                style="@style/PlayerButton"
                android:id="@+id/ibtn_next"
                android:padding="10dp"
                android:src="@mipmap/ic_skip_next_black_36dp"
                />
            <android.support.v4.widget.Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <ImageButton
                style="@style/PlayerButton"
                android:id="@+id/ibtn_play_quque"
                android:src="@mipmap/ic_queue_music_black_24dp"
                android:padding="16dp"
                />

            <android.support.v4.widget.Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>