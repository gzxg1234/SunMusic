<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/iv_song_picture"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@mipmap/default_song_pic" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/topbar_bg"
            android:paddingTop="@dimen/status_height">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="?android:attr/actionBarSize">

                <ImageButton
                    android:id="@+id/ibtn_back"
                    android:layout_width="?android:attr/actionBarSize"
                    android:layout_height="?android:attr/actionBarSize"
                    android:background="?android:attr/selectableItemBackground"
                    android:src="@mipmap/ic_chevron_left_white_36dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/ibtn_back"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="正在播放"
                    android:textColor="@color/textColorPrimaryInverse"
                    android:textSize="20dp" />
            </RelativeLayout>

        </RelativeLayout>
    </FrameLayout>

    <LinearLayout
        android:id="@+id/ll_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingTop="20dp"
            android:paddingBottom="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:singleLine="true"
                android:text="@string/app_name"
                android:textColor="@color/textColorPrimaryInverse"
                android:textSize="28dp" />

            <TextView
                android:id="@+id/tv_artist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_title"
                android:singleLine="true"
                tools:text="Justin"
                android:textColor="@color/textColorPrimaryInverse"
                android:textSize="20dp" />


            <TextView
                android:id="@+id/tv_play_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/tv_song_duration"
                android:layout_alignBottom="@+id/tv_song_duration"
                android:textColor="@color/textColorPrimaryInverse"
                android:textSize="14dp"
                android:text="00:00" />

            <TextView
                android:id="@+id/tv_song_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textColorPrimaryInverse"
                android:text="00:00"
                android:textSize="14dp"
                android:layout_alignParentRight="true"
                android:layout_alignBottom="@+id/tv_artist"
                />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <android.support.v4.widget.Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/ibtn_play_mode"
                style="@style/PlayerFunctionButton"
                android:padding="10dp"
                android:src="@mipmap/ic_repeat_one_white_24dp" />

            <android.support.v4.widget.Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/ibtn_play_quque"
                style="@style/PlayerFunctionButton"
                android:padding="8dp"
                android:src="@mipmap/ic_queue_music_white_24dp" />

            <android.support.v4.widget.Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />
        </LinearLayout>

        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:id="@+id/play_progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxHeight="2dp"
            android:minHeight="2dp"
            android:progressDrawable="@drawable/seekbar_play_progress"
            tools:max="100"
            tools:progress="20"
            tools:secondaryProgress="50" />
    </LinearLayout>



    <LinearLayout
        android:id="@+id/ll_2"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/colorPrimary"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <android.support.v4.widget.Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/ibtn_rewind"
            style="@style/PlayerControlButton"
            android:padding="16dp"
            android:src="@mipmap/ic_fast_rewind_white_24dp" />

        <android.support.v4.widget.Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/ibtn_play_pause"
            style="@style/PlayerControlButton"
            android:padding="16dp"
            android:src="@mipmap/ic_play_arrow_white_24dp" />

        <android.support.v4.widget.Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/ibtn_forward"
            style="@style/PlayerControlButton"
            android:padding="16dp"
            android:src="@mipmap/ic_fast_forward_white_24dp" />

        <android.support.v4.widget.Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </LinearLayout>

</LinearLayout>